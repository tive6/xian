/* 公共色值 */
$colorRed = #f52e3e
$colorBlue = #008bff
$color3 = #333
$color6 = #666
$color9 = #999
$bgFa = #fafafa
$bgFf = #fff
$bgYellow = #FCB984
$bgGray = #E4E4E4
$bgGrayBd = #BDBDBD
$bgGrayD2 = #D2D2D2
$bgGrayFa = #FAFAFA
$colorBor = #ebebeb
$colorBorF1 = #F1F1F1
$borderR5 = 5px
$borderR8 = 8px
$font14 = 14px
$font16 = 16px

/* @extend */
.rt-msg
  display inline-block
  width 20px
  height 30px
  position absolute
  right 17px
  top 17px
  z-index 10
  background url(./../img/home/home-icon-07.png) no-repeat center center
  background-size 100%
.rt-msg-n
  display inline-block
  width 14px
  height 14px
  line-height 14px
  text-align center
  border-radius 7px
  color $bgFf
  background-color $colorBlue
  font-size 12px
  position absolute
  top 0
  right -5px


/* 公共样式定义 */
.padding-60
  padding-bottom 60px
.padding-70
  padding-bottom 70px
/* img load failed */
.imgFailBg
  background-color $bgGrayBd
.imgLoadFail
  width 100%
  height 200px

/* footer navbar */
.navbar
  position absolute
  bottom 0
  left 0
  width 100%
  max-width 750px
  padding 8px 0
  border 1px solid $colorBor
  background-color $bgFf
.nav-list
  display block
  width 25%
  float left
  text-align center
  .nav-list-icon
    background-size 100%
.nav-list-icon
  display block
  margin 0 auto
  width 25px
  height 25px
  margin-bottom 5px
  background-size 100%
.nav-list-icon1
  background url(./../img/icon/icon-home-01.png) no-repeat center center
.nav-list-icon2
  background url(./../img/icon/icon-touzi-01.png) no-repeat center center
.nav-list-icon3
  background url(./../img/icon/icon-faxian-01.png) no-repeat center center
.nav-list-icon4
  background url(./../img/icon/icon-my-01.png) no-repeat center center
.nav-list-text
  color $color9
  font-size 11px
/* router-link-active */
.nav-link-active
  .nav-list-text
    color $colorRed
  .nav-list-icon1
    background url(./../img/icon/icon-home-011.png) no-repeat center center
  .nav-list-icon2
    background url(./../img/icon/icon-touzi-011.png) no-repeat center center
  .nav-list-icon3
    background url(./../img/icon/icon-faxian-011.png) no-repeat center center
  .nav-list-icon4
    background url(./../img/icon/icon-my-011.png) no-repeat center center
.nav-list
  .nav-list-icon
    background-size 100%
.mask-bg
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 555;
  background-color: rgba(0,0,0,.7);

/* model */
.model-content
  width 300px
  min-height 130px
  background-color $bgFf
  position absolute
  top 30%
  left 50%
  margin-left -150px
  z-index 999
  border-radius 15px
.model-text
  line-height 20px
  padding 35px 20px
  text-align center
.model-btn-outer
  width 100%
  border-top 1px solid $colorBor
.model-btn
  display block
  float left
  width 50%
  height 40px
  line-height 40px
  text-align center
  font-size 15px
.model-btn-cancel
  color $color6
  border-right 1px solid $colorBor
.model-btn-next
  color $colorRed

/* loading */
.loading-inner
  padding 30px
  width 115px
  margin 0 auto
  position absolute
  top 50%
  left 50%
  z-index 666
  margin -55px 0 0 -55px
.loading-img
  display block
  animation myLoading 1s infinite
@keyframes myLoading{
  0% {transform:rotate(0deg)}
  100% {transform:rotate(360deg)}
}



