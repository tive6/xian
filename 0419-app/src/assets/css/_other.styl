/* hint */
.hint
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  background $bgFf url(./../../assets/img/other/hint-bg.jpg) no-repeat center center
  background-size 100%
/* regs-packet */
.regsp-content
  padding 0 15px
  position fixed
  top 15%
  left 0
  z-index 666
.regsp-bg
  display block
  width 100%
  position relative
  z-index 666
.regsp-close
  display block
  width 25px
  position absolute
  top -10px
  right 5%
  z-index 666
.regsp-btn
  display block
  width 80%
  height 60px
  position absolute
  bottom 5%
  left 10%
  z-index 666
/* ce-ping-model */
.cepm-content
  width 300px
  height 102px
  background-color #fff
  border-radius 15px
  position fixed
  top 30%
  left 50%
  z-index 666
  margin-left -150px
.cepm-title
  padding 21px 15px
  color $color6
  font-size 15px
  text-align center
.cepm-footer
  width 100%
  height 45px
  border-top 1px solid $colorBor
  position absolute
  bottom 0
.cepm-btn
  display block
  width 50%
  line-height 44px
  float left
  text-align center
  font-size 17px
  color $color6
.cepm-btn-next
  color $colorRed
  border-left 1px solid $colorBor
/* login-pop */
.loginPop-outer
  width 100%
  padding 40px 15px
  position fixed
  bottom 0
  left 0
  z-index 666
  background-color $bgFf
.loginPop-btn
  display block
  height 44px
  line-height 44px
  text-align center
  border-radius 22px
  font-size 16px
.loginPop-btn-login
  linearGradient(45deg)
  margin-bottom 15px
  color $bgFf
.loginPop-btn-regs
  line-height 42px
  border 1px solid $colorRed
  color $colorRed












